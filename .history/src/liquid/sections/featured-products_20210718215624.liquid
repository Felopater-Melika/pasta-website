<section class="featured-products">
    <h2 class="featured-products__heading">
        {{ collections[section.settings.featured].title }}
    </h2>

    <div class="featured-products__items">
        {% render 'product-title' for collections[section.settings.featured].products as product %}
    </div>
</section>





{% schema %}
{
    "name": "Featured Products",
    "settings":[
    {
        "type": "collection",
        "id": "featured",
        "label": "Featured"
    }
    ], 
    "presets": [
        {
            "name": "Featured Products",
            "category": "Products Display"
        }
    ]
}
{% endschema %}